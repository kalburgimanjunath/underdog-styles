{
  "name": "underdog-styles",
  "version": "2.0.2",
  "description": "Organization wide styles",
  "main": "server/",
  "engines": {
    "node": "0.10.40",
    "npm": "1.4.28"
  },
  "scripts": {
    "clean": "rm -rf dist/",
    "browser-sync": "browser-sync start --proxy 'localhost:9008' --files='dist/**/*' --no-notify",
    "build": "npm run clean && npm run build-js && npm run build-sass && npm run favicons && npm run fonts && npm run images",
    "build-js": "mkdir -p dist/js/ && browserify --outfile dist/js/app.js js/*.js",
    "build-sass": "node-sass --include-path node_modules/ --output dist/css/ --source-map true --output-style compressed scss/",
    "postbuild-sass": "postcss --use autoprefixer --replace dist/css/**/*.css",
    "develop": "nodemon --exec 'npm run build' --watch scss/ --watch js/ --ext scss & npm run browser-sync",
    "favicons": "cp -R favicons/ dist/",
    "fonts": "cp -R fonts/ dist/fonts/",
    "gemini-gather": "gemini gather test/visual/*.js",
    "gemini-gui": "gemini-gui test/visual/*.js",
    "gemini-test": "gemini test --reporter html --reporter flat test/visual/*.js",
    "heroku-postbuild": "npm run build",
    "images": "cp -R images/ dist/img/",
    "lint": "npm run link-js && npm run link-sass",
    "lint-js": "eslint js/",
    "lint-sass": "sass-lint-underdog",
    "test": "npm run lint",
    "start": "bin/underdog-styles",
    "start-develop": "nodemon --exec bin/underdog-styles --watch server/ --watch docs/ --ext js,md,hbs",
    "start-webdriver": "webdriver-manager start",
    "webdriver-update": "webdriver-manager update --standalone"
  },
  "homepage": "https://github.com/underdogio/underdog-styles",
  "private": true,
  "devDependencies": {
    "async": "1.5.2",
    "autoprefixer": "6.3.7",
    "browser-sync": "2.13.0",
    "browserify": "13.0.0",
    "eslint": "2.8.0",
    "eslint-config-underdog": "1.1.2",
    "express": "4.13.4",
    "express-handlebars": "3.0.0",
    "gemini": "2.1.1",
    "gemini-gui": "2.2.1",
    "glob": "7.0.3",
    "meta-marked": "0.4.0",
    "node-sass": "3.8.0",
    "nodemon": "1.9.1",
    "postcss-cli": "underdogio/postcss-cli#d4f499c350cf47c95774ef79552e10c2005641c6",
    "sass-lint-underdog": "1.3.0",
    "slug": "0.9.1",
    "underscore": "1.8.3",
    "webdriver-manager": "8.0.0"
  },
  "dependencies": {
    "inuit.css": "git://github.com/underdogio/inuit.css#2dcfbd3ad85d90a2f62241e764357449df5ee5a6",
    "swipe-js": "2.2.0"
  }
}
